<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.iit.dhakathon.CandidateList">

    <TextView
        android:id="@+id/tvCityCorporation"
        android:layout_below="@+id/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="30sp"
        android:text="Which City Corporation?"/>
    <Spinner
        android:id="@+id/spCityCorporationName"
        android:layout_below="@+id/tvCityCorporation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvCandidateType"
        android:layout_below="@+id/spCityCorporationName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Type of Candidate?"/>
    <Spinner
        android:id="@+id/spCityCorporationType"
        android:layout_below="@+id/tvCandidateType"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>



    <Button
        android:id="@+id/bSearch"
        android:layout_below="@+id/spCityCorporationType"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Search"/>


</RelativeLayout>
